{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",


    "module": "commonjs",     
    "target": "es2019",
    "lib": ["esnext"],
    "types": ["node"],           
    "esModuleInterop": true,          
    "allowSyntheticDefaultImports": true,

    "sourceMap": true,


    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "skipLibCheck": true
  }
}
